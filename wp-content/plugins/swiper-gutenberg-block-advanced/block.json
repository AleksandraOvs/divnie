{
  "apiVersion": 2,
  "name": "custom/swiper-block",
  "title": "Swiper Slider",
  "category": "widgets",
  "icon": "images-alt2",
  "description": "Слайдер с редактируемыми слайдами и адаптивными настройками.",
  "attributes": {
    "slidesMobile": {
      "type": "number",
      "default": 1
    },
    "slidesTablet": {
      "type": "number",
      "default": 2
    },
    "slidesDesktop": {
      "type": "number",
      "default": 3
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "autoplayDelay": {
      "type": "number",
      "default": 3000
    },
    "autoHeight": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}